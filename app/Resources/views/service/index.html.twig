{% extends '::base.html.twig' %}
{% block breadcrumbs %}
    <a href="{{ path('homepage') }}">Главная</a> /
    {{ serviceGroup.name }}
{% endblock breadcrumbs %}
{% block body %}
    <div class="container">
        <h1>
            {{ serviceGroup.name }}
        </h1>
        <div class="row">
            {% if articles %}
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
            {% else %}
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {% endif %}
                    {% for service in services %}
                        {% if service.isVisible %}
                            {% include ':service:_list_part.html.twig' with {'service': service} %}
                        {% endif %}
                    {% endfor %}
                </div>
            {% if articles %}
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    {% include '_articles.html.twig' with {'title': 'СТАТЬИ', 'articles': articles} %}
                </div>
            {% endif %}
        </div>
            {% if pagesCount > 1 %}
                <div class="row" style="text-align: center">
                    <h4>
                        Страницы:
                    </h4>
                    <ul class="pagination pagination-sm" >
                        <li class="{% if page == 1 %}disabled{% endif %}"><a href="{{ path('service_list', {'serviceGroupName': serviceGroup.name, 'page': 1}) }}">&laquo;</a></li>
                        {% for currentPage in 1..pagesCount %}
                            <li class="{% if page == currentPage %}active{% endif %}"><a href="{{ path('service_list', {'serviceGroupName': serviceGroup.name, 'page': currentPage}) }}">{{ currentPage }}</a></li>
                        {% endfor %}
                        <li class="{% if page == pagesCount %}disabled{% endif %}"><a href="{{ path('service_list', {'serviceGroupName': serviceGroup.name, 'page': pagesCount}) }}">&raquo;</a></li>
                    </ul>
                </div>

            {% endif %}
    </div>

{% endblock body %}