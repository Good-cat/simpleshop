{% extends '::base.html.twig' %}
{% block title %}
    {{ service.serviceGroup }}. {{ service.name }} в Минске.
{% endblock title %}
{% block breadcrumbs %}
    <a href="{{ path('homepage') }}">Главная</a> /
    <a href="{{ path('service_list', {'serviceGroupName': service.serviceGroup.name}) }}">{{ service.serviceGroup.name }}</a> /
    {{ service.name }}
{% endblock breadcrumbs %}
{% block body %}
    <div class="container">
        <h1>
            {{ block('title') }}
        </h1>
    <div class="row">
        {% if articles %}
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
        {% else %}
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        {% endif %}
            {{ service.getDescription|raw() }}
            <a href="http://vkontakte.ru/share.php?url={{ app.request.getHost }}{{ app.request.getPathInfo }}" target="_blank"><img height="24" src="{{ asset('bundles/app/images/vk_icon.png') }}"/></a>
            <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div>
            </div>
        {% if articles or additional%}
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                {% if articles %}
                    {% include '_articles.html.twig' with {'title': 'СТАТЬИ В ТЕМУ', 'articles': articles} %}
                {% endif %}
                {% if additional %}
                    {% include '_articles.html.twig' with {'title': 'ВАС ТАКЖЕ ЗАИНТЕРЕСУЕТ', 'articles': additional} %}
                {% endif %}
            </div>
        {% endif %}
    </div>

{% endblock body %}