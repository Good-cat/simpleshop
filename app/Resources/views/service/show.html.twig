{% extends '::base.html.twig' %}
{% block title %}
    Карвест. {{ service.serviceGroup }}. Услуги. {{ service.name }} в Минске.
{% endblock title %}
{% block breadcrumbs %}
    <a href="{{ path('homepage') }}">Главная</a> /
    <a href="{{ path('service_list', {'serviceGroupName': service.serviceGroup.name}) }}">{{ service.serviceGroup.name }}</a> /
    {{ service.name }}
{% endblock breadcrumbs %}
{% block body %}
    <div class="container">
        <h1>
            {{ service.serviceGroup.name }}. {{ service.name }}
        </h1>
        <div class="service_annotation">
            {{ service.getDescription|raw() }}
        </div>
        <a href="http://vkontakte.ru/share.php?url={{ app.request.getHost }}{{ app.request.getPathInfo }}" target="_blank"><img height="24" src="{{ asset('bundles/app/images/vk_icon.png') }}"/></a>
        <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div>
    </div>

{% endblock body %}