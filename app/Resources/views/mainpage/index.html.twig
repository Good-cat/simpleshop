{% extends 'base.html.twig' %}

{% block description -%}
    {{ mainpage.getDescription }}
{%- endblock description %}

{% block body %}

    <div class="hero">
        {{ mainpage.getTitle }}
    </div>

    <div>
        {{ mainpage.getHeader }}
    </div>

    <div>
        {{ mainpage.getContacts|raw() }}
    </div>

    <div>
        {{ mainpage.getContent|raw() }}
    </div>

    <div>
        {{ mainpage.getFooter }}
    </div>

    {% if mainpage.hasNews %}
        <div>
            Новости отображаются
        </div>
    {% endif %}

    {% if mainpage.hasArticles %}
        <div>
            Статьи отображаются
        </div>
    {% endif %}

{% endblock %}
