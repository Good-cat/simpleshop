<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html class="no-js" lang="en"><!--<![endif]-->
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="{% block description %}{% endblock description %}" name="description">
        <meta content="{% block keywords %}{% endblock keywords %}" name="keywords">
        <script type="text/javascript" src="http://vk.com/js/api/share.js?91" charset="windows-1251"></script>
        <title>{% block title %}Carwest!{% endblock title%}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap-modal.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/app/css/style_n.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/app/css/css.css') }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/ru_RU/sdk.js#xfbml=1&version=v2.3";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
        </script>

        {{ render(controller('AppBundle:MainPage:getHeader')) }}
        <div class="container">
            <div class="breadcrumbs">
                {% block breadcrumbs %}{% endblock breadcrumbs %}
            </div>
        </div>
        {% block body %}{% endblock body%}
        {% block footer %}
            <div class="container">
                <div class="footer" id="footer">
                    <p class="text-muted" style="text-align: left;"><a href="{{ path('sonata_admin_redirect') }}">CarWest.by</a> Â© 2012-2014 {{ block('title') }}</p>
                </div>
            </div>
        {% endblock footer %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/app/js/vendor/jquery-2.1.4.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/app/js/vendor/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/app/js/vendor/bootstrap-modal.js') }}"></script>
        {% endblock %}
    </body>
</html>
